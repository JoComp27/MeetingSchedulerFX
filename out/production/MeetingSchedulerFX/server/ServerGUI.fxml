<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.RadioButton?>
<AnchorPane id="AnchorPane" prefHeight="720" prefWidth="1280" xmlns:fx="http://javafx.com/fxml/1" fx:controller="server.ServerGUIController">
    <children>

        <GridPane>
            <children>

                <Label text="Server" GridPane.columnIndex="0" GridPane.rowIndex="0" />

                <VBox GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <children>

                        <GridPane>

                            <Label text="Meeting Number: " GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                            <ComboBox fx:id="meetingNumberComboBox" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                            <Label text="New Room Number: " GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                            <TextField fx:id="newRoomTextField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                            <Button fx:id="sendButton" text="Send Message" GridPane.columnIndex="2" GridPane.rowIndex="2"/>

                        </GridPane>

                        <Label text="Output Log:"/>

                        <TextArea fx:id="outputLogTextarea"/>

                    </children>
                </VBox>

            </children>
        </GridPane>

    </children>
</AnchorPane>
